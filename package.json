{
  "name": "@josdejong/jsonquery",
  "version": "0.0.8",
  "description": "A small, flexible, and expandable JSON query language",
  "keywords": [
    "json",
    "query",
    "language",
    "small",
    "lightweight",
    "flexible",
    "expandable",
    "simple"
  ],
  "author": "Jos de Jong",
  "type": "module",
  "sideeffects": false,
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/josdejong/jsonquery.git"
  },
  "module": "./lib/jsonquery.js",
  "types": "./lib/jsonquery.d.ts",
  "exports": {
    ".": {
      "import": "./lib/jsonquery.js",
      "types": "./lib/jsonquery.d.ts"
    }
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "test": "vitest",
    "test-ci": "vitest run",
    "build": "vite build && tsc --project tsconfig-types.json",
    "lint": "prettier . --check",
    "format": "prettier . --write",
    "format:readme": "prettier README.md --write --ignore-path notneeded",
    "prepublishOnly": "npm run test-ci && npm run lint && npm run build"
  },
  "devDependencies": {
    "prettier": "3.3.3",
    "typescript": "5.5.4",
    "vite": "5.4.1",
    "vitest": "2.0.5"
  }
}
