{
  "name": "@josdejong/jsonquery",
  "version": "0.0.0",
  "description": "A small, flexible, and expandable JSON query language",
  "keywords": [
    "json",
    "query",
    "language",
    "small",
    "lightweight",
    "flexible",
    "expandable",
    "simple"
  ],
  "author": "Jos de Jong",
  "type": "module",
  "sideeffects": false,
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josdejong/jsonquery.git"
  },
  "module": "./lib/jsonquery.js",
  "types": "./lib/jsonquery.d.ts",
  "exports": {
    ".": {
      "import": "./lib/jsonquery.js",
      "types": "./lib/jsonquery.d.ts"
    }
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "test": "vitest src",
    "test-ci": "vitest run src",
    "build": "npm-run-all build:**",
    "build:esm": "vite build",
    "build:types": "tsc --project tsconfig-types.json",
    "build:validate": "vitest run test-lib",
    "lint": "prettier . --check",
    "format": "prettier . --write",
    "format:readme": "prettier README.md --write --ignore-path notneeded",
    "build-and-test": "npm-run-all test-ci lint build",
    "prepublishOnly": "npm run build-and-test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "prettier": "3.3.3",
    "semantic-release": "24.1.0",
    "typescript": "5.5.4",
    "vite": "5.4.2",
    "vitest": "2.0.5"
  }
}
